<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.py4j.defaultserver.DefaultServerStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.py4j.defaultserver.preferences.DefaultServerPreferencePage"
            id="org.py4j.defaultserver.preferences.DefaultServerPreferencePage"
            name="Py4J Default Server">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.py4j.defaultserver.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         id="py4jheadless"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="org.py4j.defaultserver.HeadlessApplication">
         </run>
      </application>
   </extension>

</plugin>
